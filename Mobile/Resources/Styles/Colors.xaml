<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryColor">#F9B872</Color>
    <Color x:Key="SecondaryColor">#E8D0B3</Color>
    <Color x:Key="AccentColor">#D4A76A</Color>
    <Color x:Key="TextColor">#7D4E24</Color>
    <Color x:Key="TextSecondaryColor">#A67C52</Color>
    <Color x:Key="BackgroundColor">#FFF9F0</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E8D0B3</Color>

    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>

    <x:Double x:Key="RadiusSM">4</x:Double>
    <x:Double x:Key="RadiusMD">8</x:Double>
    <x:Double x:Key="RadiusLG">16</x:Double>
    <x:Double x:Key="RadiusXL">24</x:Double>
</ResourceDictionary>